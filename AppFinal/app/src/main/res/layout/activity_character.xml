<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CharacterActivity">

    <TextView
            android:layout_width="182dp"
            android:layout_height="31dp" android:id="@+id/charAnsStatus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.717"
            app:layout_constraintHorizontal_bias="0.497" android:visibility="visible"
            android:gravity="center|center_vertical" android:textSize="20sp" android:textColor="#000000"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/charAnsInput"
            android:hint="Input Answer" android:visibility="visible" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.647"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/charBack"
            android:textColor="#FDFCFC"
            app:backgroundTint="#420000" android:visibility="visible" android:onClick="backClick"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.034" app:layout_constraintVertical_bias="0.976"/>
    <ImageView
            android:layout_width="260dp"
            android:layout_height="214dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/character"
            android:visibility="visible" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintVertical_bias="0.282"/>
    <Button
            android:text="Check"
            android:layout_width="238dp"
            android:layout_height="58dp" android:id="@+id/characterCheck"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:backgroundTint="#9E0101" android:onClick="charCheck"
            android:visibility="visible" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.811"/>
</androidx.constraintlayout.widget.ConstraintLayout>