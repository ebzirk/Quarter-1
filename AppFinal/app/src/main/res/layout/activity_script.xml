<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ScriptActivity" android:background="#6A6A6A">

    <TextView
            android:layout_width="182dp"
            android:layout_height="44dp" android:id="@+id/scriptAnsStatus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.717"
            app:layout_constraintHorizontal_bias="0.497" android:visibility="visible"
            android:gravity="center|center_vertical" android:textSize="20sp" android:textColor="#000000"
            android:fontFamily="@font/distantgalaxy"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/scriptBack"
            android:textColor="#FDFCFC"
            app:backgroundTint="#420000" android:visibility="visible" android:onClick="backClick"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.034" app:layout_constraintVertical_bias="0.976"
            android:fontFamily="@font/distantgalaxy"/>
    <TextView
            android:layout_width="253dp"
            android:layout_height="142dp" android:id="@+id/mandoScript"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.347" android:textColor="#000000" android:gravity="center"
            android:textSize="96sp" android:fontFamily="@font/mandalor" android:visibility="visible"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/scriptAnsInput"
            android:hint="Input Answer" android:visibility="visible" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.647"/>
    <Button
            android:text="Check"
            android:layout_width="238dp"
            android:layout_height="58dp" android:id="@+id/scriptCheck"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:backgroundTint="#420000" android:onClick="scriptCheck"
            android:visibility="visible" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.811" android:fontFamily="@font/distantgalaxy"
            android:textSize="20sp"/>
    <TextView
            android:text="Guess the Letter"
            android:layout_width="304dp"
            android:layout_height="100dp" android:id="@+id/scriptTitle"
            android:fontFamily="@font/distantgalaxy" android:textSize="48sp"
            android:textColor="#000000" android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495" app:layout_constraintVertical_bias="0.072"/>
    <ImageView
            android:layout_width="344dp"
            android:layout_height="403dp" app:srcCompat="@drawable/helmet" android:id="@+id/helmet"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="121dp"
            android:layout_height="73dp" android:id="@+id/letterAns"
            android:fontFamily="@font/distantgalaxy" android:textSize="60sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.542" android:textColor="#000000" android:gravity="center_horizontal"/>
    <TextView
            android:layout_width="104dp"
            android:layout_height="58dp" android:id="@+id/scriptScore"
            android:fontFamily="@font/distantgalaxy"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.964" app:layout_constraintVertical_bias="0.193"
            android:textSize="20sp" android:textColor="#000000" android:background="#9F9F9F" android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>