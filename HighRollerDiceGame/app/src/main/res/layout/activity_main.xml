<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="78dp"
            android:layout_height="65dp" android:id="@+id/dice2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.672"
            app:layout_constraintVertical_bias="0.579"/>
    <TextView
            android:layout_width="78dp"
            android:layout_height="65dp" android:id="@+id/dice4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.672"
            app:layout_constraintVertical_bias="0.717"/>
    <TextView
            android:layout_width="78dp"
            android:layout_height="65dp" android:id="@+id/dice3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.351"
            app:layout_constraintVertical_bias="0.717"/>
    <TextView
            android:text="     Dice Roller"
            android:layout_width="177dp"
            android:layout_height="78dp" android:id="@+id/diceTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.024" android:textSize="24sp" android:fontFamily="sans-serif-medium"
            app:layout_constraintHorizontal_bias="0.495"/>
    <Button
            android:text="Roll!"
            android:layout_width="176dp"
            android:layout_height="53dp" android:id="@+id/susan"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/diceTitle" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.793" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:onClick="rollClick" android:textSize="16sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/playerOne"
            app:layout_constraintTop_toBottomOf="@+id/diceTitle" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp" android:hint="Name"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/playerTwo"
            app:layout_constraintBottom_toTopOf="@+id/playerThree"
            app:layout_constraintTop_toBottomOf="@+id/playerOne" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.48" android:hint="Name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/playerThree"
            app:layout_constraintBottom_toTopOf="@+id/susan" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="240dp" android:hint="Name"/>
    <TextView
            android:layout_width="78dp"
            android:layout_height="65dp" android:id="@+id/dice1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.351"
            app:layout_constraintVertical_bias="0.579"/>
    <TextView
            android:layout_width="208dp"
            android:layout_height="35dp" android:id="@+id/winnerBar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.485"/>
</androidx.constraintlayout.widget.ConstraintLayout>